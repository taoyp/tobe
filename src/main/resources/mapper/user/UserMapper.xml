<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lxtyp.tobe.user.mapper.UserMapper">

    <select id="getUserById" resultType="com.lxtyp.tobe.user.entity.UserVO">
        SELECT USER_ID userId, USER_NAME userName FROM LEGO_USER
            WHERE USER_ID = #{userId}
    </select>
</mapper>